{
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "migratorInstances": {
            "type": "int",
            "defaultValue": 1,
            "minValue": 1,
            "maxValue": 100,
            "metadata": {
                "description": "Number of neo-to-cosmos app instances"
            }
        },
        "cosmosDbAccountName": {
            "type": "string",
            "defaultValue": "neo-to-cosmos",
            "metadata": {
                "description": "Cosmos DB Account name"
            }
        },
        "cosmosDbDatabase": {
            "type": "string",
            "defaultValue": "graphdb",
            "metadata": {
                "description": "Cosmos DB Database name"
            }
        },
        "cosmosDbCollection": {
            "type": "string",
            "defaultValue": "graphcollz",
            "metadata": {
                "description": "Cosmos DB Collection name"
            }
        },
        "cosmosDbPartitionKey": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Cosmos DB collection's partition key'"
            }
        },
        "cosmosDbOfferThroughput": {
            "type": "int",
            "defaultValue": 400,
            "minValue": 400,
            "maxValue": 1000000,
            "metadata": {
                "description": "Cosmos DB RU throughput in case collection has to be created"
            }
        },
        "neo4jBolt": {
            "type": "string",
            "metadata": {
                "description": "Neo4j bolt url: bolt://<BOLT_ENDPOINT>:7687"
            }
        },
        "neo4jUsername": {
            "type": "string",
            "defaultValue": "neo4j",
            "metadata": {
                "description": "Neo4j username"
            }
        },
        "neo4jPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Neo4j password"
            }
        },
        "pageSize": {
            "type": "int",
            "defaultValue": 1000,
            "metadata": {
                "description": "Page size used to read Neo4j batches"
            }
        }
    },
    "variables": {
        "cachePath": "/mnt/cache"
    },
    "resources": [
        {
            "name": "[parameters('cosmosDbAccountName')]",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2016-03-31",
            "location": "[resourceGroup().location]",
            "kind": "GlobalDocumentDB",
            "tags": {
                "defaultExperience": "Graph"
            },
            "properties": {
                "name": "[parameters('cosmosDbAccountName')]",
                "databaseAccountOfferType": "Standard",
                "capabilities": [
                    {
                        "name": "EnableGremlin"
                    }
                ]
            }
        },
        {
            "name": "[concat(resourceGroup().name, copyIndex())]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]"
            ],
            "copy": {
                "name": "containerGroupCopy",
                "count": "[parameters('migratorInstances')]"
            },
            "properties": {
                "containers": [
                    {
                        "name": "[concat(resourceGroup().name, copyIndex())]",
                        "properties": {
                            "image": "syedhassaanahmed/neo-to-cosmos",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 1
                                }
                            },
                            "volumeMounts": [
                                {
                                    "name": "cache-path",
                                    "mountPath": "[variables('cachePath')]"
                                }
                            ],
                            "command": [
                                "dotnet",
                                "NeoToCosmos.dll",
                                "[concat('-t', parameters('migratorInstances'))]",
                                "[concat('-i', copyIndex())]",
                                "[concat('-p', parameters('pageSize'))]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "COSMOSDB_ENDPOINT",
                                    "Value": "[reference(concat('Microsoft.DocumentDb/databaseAccounts/', parameters('cosmosDbAccountName'))).documentEndpoint]"
                                },
                                {
                                    "name": "COSMOSDB_AUTHKEY",
                                    "secureValue": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', parameters('cosmosDbAccountName')), '2016-03-31').primaryMasterKey]"
                                },
                                {
                                    "name": "COSMOSDB_DATABASE",
                                    "value": "[parameters('cosmosDbDatabase')]"
                                },
                                {
                                    "name": "COSMOSDB_COLLECTION",
                                    "value": "[parameters('cosmosDbCollection')]"
                                },
                                {
                                    "name": "COSMOSDB_PARTITIONKEY",
                                    "value": "[parameters('cosmosDbPartitionKey')]"
                                },
                                {
                                    "name": "COSMOSDB_OFFERTHROUGHPUT",
                                    "value": "[parameters('cosmosDbOfferThroughput')]"
                                },
                                {
                                    "name": "NEO4J_BOLT",
                                    "value": "[parameters('neo4jBolt')]"
                                },
                                {
                                    "name": "NEO4J_USERNAME",
                                    "value": "[parameters('neo4jUsername')]"
                                },
                                {
                                    "name": "NEO4J_PASSWORD",
                                    "secureValue": "[parameters('neo4jPassword')]"
                                },
                                {
                                    "name": "CACHE_PATH",
                                    "value": "[variables('cachePath')]"
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "restartPolicy": "OnFailure",
                "volumes": [
                    {
                        "name": "cache-path",
                        "emptyDir": {}
                    }
                ]
            }
        }
    ]
}